<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tic Tac Toe - AI Modes</title>
  <style>
    :root {
      --bg: #f0f0f0;
      --text: #000;
      --board-bg: #fff;
      --cell-border: #333;
      --hover-bg: #eaeaea;
      --win-color: red;
    }

    body.dark {
      --bg: #1a1a1a;
      --text: #eee;
      --board-bg: #2c2c2c;
      --cell-border: #777;
      --hover-bg: #3a3a3a;
    }

    body {
      font-family: sans-serif;
      background: var(--bg);
      color: var(--text);
      text-align: center;
      margin: 0;
      padding: 0;
    }

    h1 {
      margin: 20px 0 10px;
    }

    #controls {
      margin: 10px;
    }

    select, button {
      padding: 10px;
      margin: 5px;
      font-size: 1rem;
      border-radius: 5px;
    }

    #board {
      display: grid;
      grid-template-columns: repeat(3, 100px);
      grid-template-rows: repeat(3, 100px);
      gap: 5px;
      justify-content: center;
      margin: 20px auto;
      position: relative;
    }

    .cell {
      background: var(--board-bg);
      border: 2px solid var(--cell-border);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      cursor: pointer;
      user-select: none;
    }

    .cell:hover {
      background: var(--hover-bg);
    }

    #messageBox {
      font-size: 2rem;
      padding: 20px;
      margin: 20px auto;
      max-width: 300px;
      border: 3px dashed var(--text);
      border-radius: 10px;
      animation: popIn 0.5s ease;
    }

    @keyframes popIn {
      0% { transform: scale(0.5); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }

    .win-line {
      position: absolute;
      height: 5px;
      background-color: var(--win-color);
      transform-origin: left center;
      z-index: 1;
      animation: growLine 0.3s ease forwards;
    }

    @keyframes growLine {
      from { width: 0; }
      to { width: 100%; }
    }
  </style>
</head>
<body>
  <h1>Tic Tac Toe 🎮</h1>
  <div id="controls">
    <select id="difficulty">
      <option value="easy">Easy</option>
      <option value="moderate">Moderate</option>
      <option value="hard" selected>Hard</option>
    </select>
    <button onclick="resetGame()">Reset</button>
    <button onclick="toggleTheme()">Toggle Theme</button>
  </div>
  <div id="score">Player: 0 | AI: 0</div>
  <div id="messageBox">Your turn (X)</div>
  <div id="board"></div>

  <script>
    const board = document.getElementById("board");
    const messageBox = document.getElementById("messageBox");
    const scoreDisplay = document.getElementById("score");
    const difficultySelect = document.getElementById("difficulty");

    let cells = [];
    let player = "X";
    let ai = "O";
    let currentPlayer = player;
    let gameActive = true;

    let playerScore = parseInt(localStorage.getItem("playerScore")) || 0;
    let aiScore = parseInt(localStorage.getItem("aiScore")) || 0;

    const winPatterns = [
      [0,1,2], [3,4,5], [6,7,8],
      [0,3,6], [1,4,7], [2,5,8],
      [0,4,8], [2,4,6]
    ];

    function updateScore() {
      scoreDisplay.textContent = `Player: ${playerScore} | AI: ${aiScore}`;
      localStorage.setItem("playerScore", playerScore);
      localStorage.setItem("aiScore", aiScore);
    }

    function setMessage(msg) {
      messageBox.innerHTML = msg;
    }

    function createBoard() {
      board.innerHTML = "";
      cells = [];
      for (let i = 0; i < 9; i++) {
        const cell = document.createElement("div");
        cell.className = "cell";
        cell.dataset.index = i;
        cell.addEventListener("click", handleClick);
        board.appendChild(cell);
        cells.push(cell);
      }
    }

    function handleClick(e) {
      const cell = e.target;
      if (!gameActive || cell.textContent !== "") return;
      cell.textContent = player;
      if (checkWin(player)) return endGame("🎉 You win!", true);
      if (isDraw()) return endGame("😐 It's a draw!", false);
      currentPlayer = ai;
      setMessage("AI thinking...");
      setTimeout(aiMove, 500);
    }

    function aiMove() {
      const mode = difficultySelect.value;
      let index;

      if (mode === "easy") {
        index = randomMove();
      } else if (mode === "moderate") {
        index = Math.random() < 0.5 ? minimaxMove() : randomMove();
      } else {
        index = minimaxMove();
      }

      if (index !== null) {
        cells[index].textContent = ai;
        if (checkWin(ai)) return endGame("🤖 AI wins!", false);
        if (isDraw()) return endGame("😐 It's a draw!", false);
      }

      currentPlayer = player;
      setMessage("Your turn (X)");
    }

    function randomMove() {
      const empty = cells.map((c, i) => c.textContent === "" ? i : null).filter(i => i !== null);
      return empty.length ? empty[Math.floor(Math.random() * empty.length)] : null;
    }

    function minimaxMove() {
      let bestScore = -Infinity;
      let move = null;

      for (let i = 0; i < 9; i++) {
        if (cells[i].textContent === "") {
          cells[i].textContent = ai;
          const score = minimax(cells.map(c => c.textContent), 0, false);
          cells[i].textContent = "";
          if (score > bestScore) {
            bestScore = score;
            move = i;
          }
        }
      }

      return move;
    }

    function minimax(boardState, depth, isMax) {
      if (checkWinState(boardState, ai)) return 10 - depth;
      if (checkWinState(boardState, player)) return depth - 10;
      if (!boardState.includes("")) return 0;

      if (isMax) {
        let best = -Infinity;
        for (let i = 0; i < 9; i++) {
          if (boardState[i] === "") {
            boardState[i] = ai;
            best = Math.max(best, minimax(boardState, depth + 1, false));
            boardState[i] = "";
          }
        }
        return best;
      } else {
        let best = Infinity;
        for (let i = 0; i < 9; i++) {
          if (boardState[i] === "") {
            boardState[i] = player;
            best = Math.min(best, minimax(boardState, depth + 1, true));
            boardState[i] = "";
          }
        }
        return best;
      }
    }

    function checkWinState(state, mark) {
      return winPatterns.some(p => p.every(i => state[i] === mark));
    }

    function checkWin(mark) {
      for (const pattern of winPatterns) {
        if (pattern.every(i => cells[i].textContent === mark)) {
          drawWinLine(pattern);
          return true;
        }
      }
      return false;
    }

    function drawWinLine(pattern) {
      const [a, , c] = pattern;
      const start = cells[a].getBoundingClientRect();
      const end = cells[c].getBoundingClientRect();
      const boardRect = board.getBoundingClientRect();

      const x1 = start.left + start.width / 2 - boardRect.left;
      const y1 = start.top + start.height / 2 - boardRect.top;
      const x2 = end.left + end.width / 2 - boardRect.left;
      const y2 = end.top + end.height / 2 - boardRect.top;

      const length = Math.hypot(x2 - x1, y2 - y1);
      const angle = Math.atan2(y2 - y1, x2 - x1) * 180 / Math.PI;

      const line = document.createElement("div");
      line.className = "win-line";
      line.style.left = `${x1}px`;
      line.style.top = `${y1}px`;
      line.style.width = `${length}px`;
      line.style.transform = `rotate(${angle}deg)`;

      board.appendChild(line);
    }

    function isDraw() {
      return cells.every(c => c.textContent !== "");
    }

    function endGame(msg, playerWon) {
      gameActive = false;
      setMessage(msg);
      if (playerWon) playerScore++; else if (msg.includes("wins")) aiScore++;
      updateScore();
      setTimeout(resetGame, 2500);
    }

    function resetGame() {
      gameActive = true;
      setMessage("Your turn (X)");
      createBoard();
    }

    function toggleTheme() {
      document.body.classList.toggle("dark");
      localStorage.setItem("theme", document.body.classList.contains("dark") ? "dark" : "light");
    }

    function applyTheme() {
      if (localStorage.getItem("theme") === "dark") {
        document.body.classList.add("dark");
      }
    }

    applyTheme();
    updateScore();
    createBoard();
  </script>
</body>
</html>
